{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "npm install && npm install --prefix app",
  "buildCommand": "npm run build --prefix app",
  "outputDirectory": "app/dist",
  "rewrites": [
    { "source": "/p/:shortId", "destination": "/index.html" },
    { "source": "/proposta", "destination": "/index.html" },
    { "source": "/portfolio/(.*)", "destination": "/index.html" },
    { "source": "/:path((?!api|assets|_next).*)", "destination": "/index.html" }
  ]
}
